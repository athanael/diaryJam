<h1><%= @post.track_title %></h1>
<p>Artiste : <%= @post.artist_name %></p>

<% if @post.cover_url.present? %>
  <img src="<%= @post.cover_url %>" alt="<%= @post.track_title %> cover" style="max-width: 150px; height: 150px; object-fit: cover;">
<% end %>

<% if @post.preview_url.present? %>
  <audio controls>
    <source src="<%= @post.preview_url %>" type="audio/mpeg">
    Votre navigateur ne supporte pas l'élément audio.
  </audio>
<% end %>

<p><%= @post.review %></p>

<h3>Commentaires</h3>
<% if @post.comments.any? %>
  <% @post.comments.each do |comment| %>
    <div>
      <p><strong><%= comment.user.username %> :</strong> <%= comment.body %></p>
    </div>
  <% end %>
<% else %>
  <p>Aucun commentaire pour le moment.</p>
<% end %>
