<div class="container mt-5">
  <h1>Mes recommendations du jour sont :</h1>
  <% @recommended_id.each do |track_id| %>
    <iframe src="https://open.spotify.com/embed/track/<%= track_id %>?utm_source=generator"
              width="100%" height="80px" frameborder="0" allowfullscreen=""
              allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
              loading="lazy" style="border-radius: 12px;"></iframe>
  <% end %>
  <div class="profile-buttons d-flex justify-content-around">
    <%= button_to "Changer ma reco", recommendations_path(current_user), class: "reco-button" %>
    <%= link_to "Retour au profil", user_path(current_user), class: "reco-button mb-5" %>
  </div>
</div>
